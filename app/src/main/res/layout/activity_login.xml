<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".activities.LoginActivity">

    <EditText
        android:id="@+id/login_panel_username_box"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/login_panel_password_box"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/login_panel_password_box"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_panel_password_box"
        android:layout_alignStart="@+id/login_panel_password_box"
        android:layout_below="@+id/login_panel_password_box"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="0dp">

            <ImageButton
                android:id="@+id/login_panel_login_button"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:background="@null"
                android:contentDescription=""
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/button_empty" />

            <TextView
                android:id="@+id/login_panel_login_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/login_label"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/login_panel_password_box"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="64dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="0dp">

            <ImageButton
                android:id="@+id/login_panel_register_button"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:background="@null"
                android:contentDescription=""
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/button_empty" />

            <TextView
                android:id="@+id/login_panel_register_label"
                android:text="@string/register_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/login_panel_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-16dp"
        android:layout_marginStart="-16dp"
        android:paddingLeft="24dp"
        android:paddingStart="24dp"
        android:background="@drawable/log_box"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/login_activity_ip_address_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName" />
</RelativeLayout>